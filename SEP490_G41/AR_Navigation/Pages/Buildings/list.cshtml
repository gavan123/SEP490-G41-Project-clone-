@page
@model AR_Navigation.Pages.Buildings.listModel
@{
    Layout = "_Layout1";
}
<div class="page-header no-gutters">
    <h1>Building List</h1>
    <div class="row align-items-md-center">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-5">
                    <div class="input-affix m-v-10">
                        <i class="prefix-icon anticon anticon-search opacity-04"></i>
                        <input type="text" class="form-control" placeholder="Search Project">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-md-right m-v-10">
                <button class="btn btn-primary" data-toggle="modal" data-target="#create-new-project">
                    <i class="anticon anticon-plus"></i>
                    <span class="m-l-5">New Project</span>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card " id="list-view">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 30%;">Building Name</th>
                            <th>Floor Count</th>
                            <th>Status</th>
                            <th>Facility</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="building-list">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>

<script>
    $(document).ready(function () {
        function updateBuildingList(buildings) {
            $('#building-list').empty();

            buildings.forEach(function (building) {
                // Lấy buildingId của mỗi tòa nhà
                var buildingId = building.buildingId;

                // Gửi yêu cầu AJAX để lấy số lượng tầng của tòa nhà từ OData COUNT
                $.ajax({
                    url: `https://localhost:7186/api/floors?$filter=buildingId eq ${buildingId}`,
                    type: 'GET',
                    dataType: 'json',
                    success: function (floors) {
                        var count = floors.length;

                        // Tạo hàng cho mỗi tòa nhà và thêm vào bảng
                        var buildingRow = `
                                <tr>
                                    <td>
                                        <div class="media align-items-center">
                                            <div class="avatar avatar-image rounded">
                                                <img src="${building.image}" alt="">
                                            </div>
                                            <div class="m-l-10">
                                                <h5 class="m-b-0">${building.buildingName}</h5>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span>${count}</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-${building.status === 'active' ? 'success' : 'danger'} badge-dot m-r-10"></div>
                                            <div>${building.status}</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span>${building.facilityName}</span>
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-animated scale-left">
                                            <a class="text-gray font-size-18" href="javascript:void(0);" data-toggle="dropdown">
                                                <i class="anticon anticon-ellipsis"></i>
                                            </a>
                                            <div class="dropdown-menu">
                                                <button class="dropdown-item" type="button">
                                                    <i class="anticon anticon-eye"></i>
                                                    <span class="m-l-10">View</span>
                                                </button>
                                                <button class="dropdown-item" type="button">
                                                    <i class="anticon anticon-edit"></i>
                                                    <span class="m-l-10">Edit</span>
                                                </button>
                                                <button class="dropdown-item" type="button">
                                                    <i class="anticon anticon-delete"></i>
                                                    <span class="m-l-10">Delete</span>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>`;

                        $('#building-list').append(buildingRow);
                    },
                    error: function (xhr, status, error) {
                        console.log('Error loading building count from API: ' + error);
                    }
                });
            });
        }

        // Lấy danh sách tòa nhà từ API
        $.ajax({
            url: 'https://localhost:7186/api/buildings',
            type: 'GET',
            dataType: 'json',
            success: function (buildings) {
                updateBuildingList(buildings);
            },
            error: function (xhr, status, error) {
                console.log('Error loading buildings from API: ' + error);
            }
        });
    });
</script>






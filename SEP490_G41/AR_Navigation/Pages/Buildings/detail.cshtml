<style>
    .selected-image-container {
        width: 1300px;
        height: 400px;
        border: 2px solid #ced4da;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
        position: relative;
    }

        .selected-image-container img {
            width: 100%;
            height: 260px;
            display: block;
            margin-bottom: 10px;
        }



